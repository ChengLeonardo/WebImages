    @model BackEnd.Models.PostearViewModel

<body class="h-screen w-full flex justify-center items-center bg-gris">
    <div class="bg-white p-8 rounded-3xl shadow-lg w-96">
        <h2 class="text-3xl font-bold mb-6 text-center text-azul">Crear nuevo post</h2>

        <form asp-action="Postear" enctype="multipart/form-data" class="space-y-6">
            <div class="space-y-2">
                <label asp-for="Imagen" class="block text-sm font-medium text-gray-700">Imagen</label>
                <input asp-for="Imagen" type="file" class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-azul focus:border-azul" />
                <span asp-validation-for="Imagen" class="text-xs text-red-600"></span>
            </div>

            <div class="space-y-2">
                <label asp-for="Descripcion" class="block text-sm font-medium text-gray-700">Descripci√≥n</label>
                <textarea asp-for="Descripcion" class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-azul focus:border-azul" rows="4"></textarea>
                <span asp-validation-for="Descripcion" class="text-xs text-red-600"></span>
            </div>

            <div class="flex justify-center">
                <button type="submit" class="bg-azul hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-full transition duration-300 ease-in-out transform hover:scale-105">
                    Publicar
                </button>
            </div>
        </form>
    </div>
</body>

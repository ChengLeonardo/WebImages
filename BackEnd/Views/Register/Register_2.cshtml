                    </svg>
                    <span asp-validation-for="Email" class="text-danger"></span>
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                </div>
                <!--Input de Contraseña-->
                <p class="mt-2 mb-2">Contrasena</p>
                <div class="w-4/5 relative">
                    <label for="password"></label>
                    <input asp-for="Contrasena" class="pl-12 text-black w-full h-12 rounded-full bg-white outline-none" name="Contrasena" type="password" required>
                    <svg class="absolute pr-2" id="candado" data-name="Capa 1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 113.08 143.06">
                        <rect class="cls-1" y="46.57" width="113.08" height="96.49" rx="16.8" ry="16.8"/>

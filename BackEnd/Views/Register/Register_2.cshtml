@model BackEnd.Models.Register_2ViewModel;
    <section class="h-full w-5/12 flex justify-center items-center">
        <div id="login" class="flex flex-col items-center h-4/5 w-full text-xl font-bold text-white rounded-3xl text-center bg-white/50">
            <h1 class="mt-8 mb-12 text-4xl font-bold">Registrate</h1>
            <form asp-action="Register_2" asp-controller="Register" class="w-4/6 mt-6 flex justify-center items-center flex-col" method="post">
                <p class="mb-2">Email</p>
                <!--Input de Email-->
                <div class="w-4/5 relative">
                    <label for="Email"></label>
                    <input asp-for="Email" class="pl-12 text-black w-full h-12 rounded-full bg-white outline-none" name="Email" type="text" required >
                    <svg class="absolute pr-2" id="correo" data-name="Capa 1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 53.11 42.44">
                        <path class="cls-1" d="M50.81,42.44c1.27,0,2.3-1.65,2.3-3.68V15.81c0-2.64-1.69-4.43-3.21-3.38l-16.44,11.28c-4.16,2.86-9.66,2.86-13.82,0L3.21,12.42c-1.52-1.04-3.21.74-3.21,3.38v22.95c0,2.03,1.03,3.68,2.3,3.68h48.51Z"/>
